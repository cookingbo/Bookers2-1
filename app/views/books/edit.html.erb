<h2>Editing Book</h2>
<%= render 'error', book: @book %>
<%= form_with model: @book do |f| %>
  <div>
    <label>Title</label><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <label>Opinion</label><br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
