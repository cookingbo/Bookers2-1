<h2>User info</h2>

<%= form_with model: @user do |f| %>
<%= render 'error', user: @user %>
  <label>Name</label>
  <%= f.text_field :name %>

  <label>Image</label>
  <%= f.file_field :profile_image, accept: "image/*" %>

  <label>Introduction</label>
  <%= f.text_area :introduction %>

  <%= link_to "Update User", user_path(@user.id) %>
<% end %>